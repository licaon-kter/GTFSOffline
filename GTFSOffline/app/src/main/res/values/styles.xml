<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <style name="Text" parent="@android:style/TextAppearance" />
    
    <style name="List" parent="Text">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:background">@color/list_dark_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingRight">1dip</item>
    </style>

    <style name="List.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:background">@color/list_dark_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">3dip</item>
    </style>

    <style name="List.Label">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="List.Body">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/grt_blue</item>
        <item name="android:dividerHeight">3dip</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">true</item>
    </style>

    <style name="List.Content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:scrollHorizontally">false</item>
    </style>
    
    <style name="List.Cont1" parent="List.Content">
         <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">1dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="List.Cont2" parent="List.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingRight">1dip</item>
    </style>

    <style name="List.Rightlabel">
        <item name="android:gravity">right</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textColor">@color/timer</item>
    </style>

    <style name="List.Stoptime">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="List.DBStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">1dip</item>
        <item name="android:paddingRight">1dip</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>    

    <style name="List.Stopbusname">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="List.RouteandStoplabel">
        <item name="android:layout_width">76dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">42sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="List.Stoplabel" parent="List.RouteandStoplabel">
        <item name="android:textColor">@color/grt_blue</item>
        <item name="android:background">@drawable/stopnumber</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
    </style>

    <style name="List.Routelabel" parent="List.RouteandStoplabel">
        <item name="android:textColor">@color/grt_yellow</item>
        <item name="android:background">@drawable/routenumber</item>
    </style>
    
    
</resources>
